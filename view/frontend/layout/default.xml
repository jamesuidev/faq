<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
      <referenceBlock name="header.links">
            <block class="Magento\Framework\View\Element\Html\Link" name="form-header-menu">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Ask a Question</argument>
                    <argument name="path" xsi:type="string">faq/manage/add</argument>
                </arguments>
            </block>
        </referenceBlock>
       <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link\Current"  name="mymodule-link"> 
            <arguments>
                 <argument name="label" xsi:type="string" translate="true">Faq</argument>
                 <argument name="path" xsi:type="string">faq/manage/index</argument>
            </arguments>
        </block>
      </referenceBlock>
    </body>
</page>